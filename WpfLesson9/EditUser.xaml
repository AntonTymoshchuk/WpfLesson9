<Window x:Class="WpfLesson9.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLesson9"
        mc:Ignorable="d"
        Title="EditUser" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="0" FontSize="36" VerticalAlignment="Center"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="1" FontSize="36" VerticalAlignment="Center"/>
        <Button Grid.Row="2" Content="Apply" FontSize="36" Click="Button_Click"/>
    </Grid>
</Window>
